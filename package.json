{
  "name": "appointment-revenue-optimizer",
  "version": "0.1.0",
  "private": true,
  "description": "Appointment Revenue Optimizer monorepo",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.ts",
    "test:coverage": "vitest run --config vitest.coverage.config.ts --coverage",
    "openclaw:build": "npm run build --workspace @aro/openclaw-executor",
    "openclaw:start": "npm run start --workspace @aro/openclaw-executor",
    "openclaw:package": "bash ./scripts/package-openclaw-executor.sh",
    "openclaw:external:install": "npm i -g openclaw",
    "openclaw:external:verify": "openclaw --version",
    "openclaw:external:links": "echo 'OpenClaw docs: https://docs.openclaw.ai/tools/multi-agent-sandbox-tools https://docs.openclaw.ai/tools/skills https://docs.openclaw.ai/tools/exec https://docs.openclaw.ai/tools/agent-send'",
    "perf:k6": "bash ./scripts/perf-k6.sh",
    "ce:check": "bash ./scripts/check-ce-boundaries.sh",
    "ce:export": "bash ./scripts/export-public-ce.sh",
    "security:deps": "npm audit --audit-level=critical",
    "security:secrets": "bash ./scripts/secret-scan.sh",
    "ci:local": "npm run lint && npm run typecheck && npm run test && npm run test:integration"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.21.0",
    "fastify": "^5.2.1",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7",
    "zod": "^3.24.2"
  }
}
